[
  {
    "@id": "dtmi:ex:robotics:RobotArm;1",
    "@type": "Interface",
    "@context": "dtmi:dtdl:context;2",
    "displayName": "Robot Arm",
    "description": "A multi-joint robot arm with an end-effector (gripper).",
    "contents": [
      { "@type": "Property", "name": "manufacturer", "schema": "string" },
      { "@type": "Property", "name": "model", "schema": "string" },
      { "@type": "Property", "name": "serialNumber", "schema": "string" },
      { "@type": "Property", "name": "degreesOfFreedom", "schema": "integer" },
      { "@type": "Property", "name": "payloadCapacity", "schema": "double" },
      { "@type": "Property", "name": "reach", "schema": "double" },
      { "@type": "Property", "name": "supplyVoltageNominal", "schema": "double" },
      {
        "@type": "Property",
        "name": "state",
        "schema": {
          "@type": "Enum",
          "valueSchema": "string",
          "enumValues": [
            { "name": "Idle", "enumValue": "idle" },
            { "name": "Running", "enumValue": "running" },
            { "name": "Stopped", "enumValue": "stopped" },
            { "name": "Fault", "enumValue": "fault" },
            { "name": "EStop", "enumValue": "estop" }
          ]
        }
      },
      { "@type": "Telemetry", "name": "faultCode", "schema": "string" },
      {
        "@type": "Relationship",
        "name": "hasJoint",
        "target": "dtmi:ex:robotics:Joint;1",
        "minMultiplicity": 0,
        "maxMultiplicity": 10
      },
      { "@type": "Component", "name": "gripper", "schema": "dtmi:ex:robotics:Gripper;1" },
      { "@type": "Command", "name": "emergencyStop" },
      { "@type": "Command", "name": "clearFaults" }
    ]
  },

  {
    "@id": "dtmi:ex:robotics:Joint;1",
    "@type": "Interface",
    "@context": "dtmi:dtdl:context;2",
    "displayName": "Robot Joint",
    "description": "A single joint in the robot arm.",
    "contents": [
      { "@type": "Property", "name": "jointIndex", "schema": "integer" },
      {
        "@type": "Property",
        "name": "jointType",
        "schema": {
          "@type": "Enum",
          "valueSchema": "string",
          "enumValues": [
            { "name": "Revolute", "enumValue": "revolute" },
            { "name": "Prismatic", "enumValue": "prismatic" }
          ]
        }
      },
      { "@type": "Property", "name": "position", "schema": "double" },
      { "@type": "Property", "name": "velocity", "schema": "double" },
      { "@type": "Property", "name": "torqueOrForce", "schema": "double" },
      { "@type": "Property", "name": "temperature", "schema": "double" },
      { "@type": "Property", "name": "voltage", "schema": "double" },
      { "@type": "Property", "name": "current", "schema": "double" },
      {
        "@type": "Property",
        "name": "healthStatus",
        "schema": {
          "@type": "Enum",
          "valueSchema": "string",
          "enumValues": [
            { "name": "OK", "enumValue": "ok" },
            { "name": "Warning", "enumValue": "warning" },
            { "name": "Critical", "enumValue": "critical" }
          ]
        }
      },
      {
        "@type": "Property",
        "name": "limits",
        "schema": {
          "@type": "Object",
          "fields": [
            { "name": "minPosition", "schema": "double" },
            { "name": "maxPosition", "schema": "double" },
            { "name": "maxVelocity", "schema": "double" },
            { "name": "maxTorqueOrForce", "schema": "double" }
          ]
        }
      },
      {
        "@type": "Property",
        "name": "orientationEuler",
        "schema": {
          "@type": "Object",
          "fields": [
            { "name": "roll", "schema": "double" },
            { "name": "pitch", "schema": "double" },
            { "name": "yaw", "schema": "double" }
          ]
        }
      },
      {
        "@type": "Property",
        "name": "orientationQuaternion",
        "schema": {
          "@type": "Object",
          "fields": [
            { "name": "x", "schema": "double" },
            { "name": "y", "schema": "double" },
            { "name": "z", "schema": "double" },
            { "name": "w", "schema": "double" }
          ]
        }
      },
      { "@type": "Telemetry", "name": "vibrationRms", "schema": "double" },
      {
        "@type": "Relationship",
        "name": "isPartOf",
        "target": "dtmi:ex:robotics:RobotArm;1",
        "minMultiplicity": 0,
        "maxMultiplicity": 1
      },
      { "@type": "Command", "name": "setPosition", "request": { "name": "target", "schema": "double" } },
      { "@type": "Command", "name": "setVelocity", "request": { "name": "target", "schema": "double" } }
    ]
  },

  {
    "@id": "dtmi:ex:robotics:Gripper;1",
    "@type": "Interface",
    "@context": "dtmi:dtdl:context;2",
    "displayName": "Gripper",
    "description": "End-effector for grasping.",
    "contents": [
      {
        "@type": "Property",
        "name": "gripperType",
        "schema": {
          "@type": "Enum",
          "valueSchema": "string",
          "enumValues": [
            { "name": "Parallel", "enumValue": "parallel" },
            { "name": "Vacuum", "enumValue": "vacuum" },
            { "name": "Magnetic", "enumValue": "magnetic" }
          ]
        }
      },
      { "@type": "Property", "name": "width", "schema": "double" },
      { "@type": "Property", "name": "force", "schema": "double" },
      { "@type": "Property", "name": "isOpen", "schema": "boolean" },
      { "@type": "Property", "name": "temperature", "schema": "double" },
      { "@type": "Property", "name": "voltage", "schema": "double" },
      { "@type": "Property", "name": "current", "schema": "double" },
      { "@type": "Command", "name": "open" },
      { "@type": "Command", "name": "close" },
      { "@type": "Command", "name": "setWidth", "request": { "name": "targetWidth", "schema": "double" } }
    ]
  }
]
